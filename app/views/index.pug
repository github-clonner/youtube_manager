extends layout

block content
  .jumbotron.text-center
    h2 Youtube Subscriptions Manager
    h3 The best way to manage your Youtube subscriptions
  .container-fluid
    .row
      .col-xs-12.col-sm-8
        each item in ytData.items
          .row
            .row-thumbnail.col-sm-1
              a(href=item.url)
                img(src=item.thumbnail)
            .col-sm-11
              h4= item.title
              a(href="#" data-toggle="tooltip" title="Add tag")
                span.glyphicon.glyphicon-tag.pull-right
              // .row
                .col-sm-12
                  form(action="/submittags", method="POST")
                    .form-group
                      .input-group
                        input(name="input_tags", class="form-control", type=text, placeholder="Tags...")
                        span.input-group-btn
                          button(class="btn btn-default", type="submit")
      .col-xs-12.col-sm-4
        .panel.panel-default
          .panel-heading Search options
          .panel-body
            span Search tag
            #ddbTags.dropdown
              button.btn.btn-default.dropdown-toggle(type="button" id="ddbTag" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true") (Search)
                span.caret
              ul.dropdown-menu(aria-labelledby="dropdownMenu1")
                li
                  a(href="#") Toto
                li
                  a(href="#") Titi